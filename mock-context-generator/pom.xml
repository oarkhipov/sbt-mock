<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>mock-interactive-parent</artifactId>
        <groupId>ru.sbt.bpm.mock</groupId>
        <version>3.5.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>context-generator</artifactId>
    <packaging>war</packaging>

    <dependencies>
        <dependency>
            <groupId>org.springframework.integration</groupId>
            <artifactId>spring-integration-jms</artifactId>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.13.1</version>
                <executions>
                    <execution>
                        <id>generate4beans</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <episode>true</episode>
                            <episodeFile>target/generated-sources/META-INF/beans.episode</episodeFile>
                            <catalog>src/xjc/catalogs/catalog.cat</catalog>
                            <generatePackage>generated.springframework.beans</generatePackage>
                            <bindings>
                                <binding>
                                    <url>src/xjc/binding/spring-beans.xjb</url>
                                </binding>
                            </bindings>
                            <schemas>
                                <schema>
                                    <url>maven:org.springframework:spring-beans:::4.2.4.RELEASE!/org/springframework/beans/factory/xml/spring-beans-4.2.xsd</url>
                                </schema>
                            </schemas>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate4intcore</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <strict>false</strict>
                            <episode>true</episode>
                            <episodeFile>target/generated-sources/META-INF/intcore.episode</episodeFile>
                            <catalog>src/xjc/catalogs/catalog.cat</catalog>
                            <generatePackage>generated.springframework.integration</generatePackage>
                            <bindings>
                                <binding>
                                    <url>src/xjc/binding/spring-integration.xjb</url>
                                </binding>
                            </bindings>
                            <args>
                                <arg>-extension</arg>
                                <arg>-b</arg>
                                <arg>target/generated-sources/META-INF/beans.episode</arg>
                            </args>
                            <schemas>
                                <schema>
                                    <url>maven:org.springframework.integration:spring-integration-core:::4.2.5.RELEASE!/org/springframework/integration/config/xml/spring-integration-4.2.xsd</url>
                                </schema>
                            </schemas>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate4intjms</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <strict>false</strict>
                            <episode>true</episode>
                            <episodeFile>target/generated-sources/META-INF/intcore.episode</episodeFile>
                            <catalog>src/xjc/catalogs/catalog.cat</catalog>
                            <generatePackage>generated.springframework.integration.jms</generatePackage>
                            <bindings>
                                <binding>
                                    <url>src/xjc/binding/spring-integration-jms.xjb</url>
                                </binding>
                            </bindings>
                            <args>
                                <arg>-extension</arg>
                                <arg>-b</arg>
                                <arg>target/generated-sources/META-INF/intcore.episode</arg>
                                <arg>-b</arg>
                                <arg>target/generated-sources/META-INF/beans.episode</arg>
                            </args>
                            <schemas>
                                <schema>
                                    <url>maven:org.springframework.integration:spring-integration-jms:::4.2.5.RELEASE!/org/springframework/integration/jms/config/spring-integration-jms-4.2.xsd</url>
                                </schema>
                            </schemas>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>