<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-ws="http://www.springframework.org/schema/integration/ws"
       xmlns:sws="http://www.springframework.org/schema/web-services"
       xmlns:beans="http://www.springframework.org/schema/mvc"
       xmlns:int-http="http://www.springframework.org/schema/integration/http"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd http://www.springframework.org/schema/integration/ws http://www.springframework.org/schema/integration/ws/spring-integration-ws.xsd http://www.springframework.org/schema/web-services http://www.springframework.org/schema/web-services/web-services.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd">

       <mvc:default-servlet-handler/>

       <int:channel id="inChannel">
              <int:interceptors>
                     <int:wire-tap channel="inGateLogger"/>
              </int:interceptors>
       </int:channel>
       <int:channel id="outChannel">
              <int:interceptors>
                     <int:wire-tap channel="outGateLogger"/>
              </int:interceptors>
       </int:channel>

       <int:logging-channel-adapter id="inGateLogger" logger-name="fromGateLogger"/>
       <int:logging-channel-adapter id="outGateLogger" logger-name="toGateLogger"/>


       <int-http:inbound-gateway request-channel="inChannel" path="/xFramework/services/QuickDoc.QuickDocHttpSoap11Endpoint" reply-channel="outChannel"/>

       <!--<int:service-activator input-channel="inChannel" output-channel="outChannel">-->
