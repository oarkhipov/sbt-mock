     <!--Настройки подключения к MQ-->
    <beans:bean id = "jndiConnectionFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
            <beans:property name="jndiName" value="jms/KKMB.DEV.CF"/>
    </beans:bean>
    <beans:bean id="requestQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
            <beans:property name="jndiName" value="jms/Q.KKMB.TO.CRMORG"/>
    </beans:bean>
    <beans:bean id="replyQueue" class="org.springframework.jndi.JndiObjectFactoryBean">
            <beans:property name="jndiName" value="jms/Q.KKMB.TO.CRMORG.SYNCRESP"/>
    </beans:bean>

     <beans:bean id="requestQueueCRM" class="org.springframework.jndi.JndiObjectFactoryBean">
            <beans:property name="jndiName" value="jms/Q.KKMB.FROM.CRMORG"/>
    </beans:bean>
    <beans:bean id="replyQueueCRM" class="org.springframework.jndi.JndiObjectFactoryBean">
            <beans:property name="jndiName" value="jms/Q.KKMB.FROM.CRMORG.SYNCRESP"/>
    </beans:bean>

    <jms:inbound-gateway
            id="jmsin"
            request-destination="requestQueue"
            request-channel="Q.KKMB.TO.CRMORG"
            reply-channel="Q.KKMB.TO.CRMORG.SYNCRESP"
            default-reply-destination="replyQueue"
            header-mapper="defHeaderMapper"
            connection-factory="jndiConnectionFactory"
    />

    <jms:outbound-gateway
            id="jmsout"
            request-destination="requestQueueCRM"
            reply-destination="replyQueueCRM"
            request-channel="Q.KKMB.FROM.CRMORG"
            reply-channel="Q.KKMB.FROM.CRMORG.SYNCRESP"
            header-mapper="defHeaderMapper"
            connection-factory="jndiConnectionFactory"
            reply-timeout="30000"
            receive-timeout="30000"
    />

    <!-- Входной и выходной каналы -->
    <channel id="Q.KKMB.TO.CRMORG">
        <interceptors>
            <wire-tap channel="fromGateLogger"/>
        </interceptors>
    </channel>
    
    <channel id="Q.KKMB.TO.CRMORG.SYNCRESP">
        <interceptors>
            <wire-tap channel="toGateLogger"/>
        </interceptors>
    </channel>
    
      <!-- Входной и выходной каналы1 -->	
    <channel id="Q.KKMB.FROM.CRMORG.SYNCRESP">
        <interceptors>
            <wire-tap channel="fromGateLoggerCRM"/>
        </interceptors>
    </channel>
    
    <channel id="Q.KKMB.FROM.CRMORG">
        <interceptors>
            <wire-tap channel="toGateLoggerCRM"/>
        </interceptors>
    </channel>

