    ${NAMESPACE_MAP}
    <!-- Карта неймспейсов-->
    <util:map id="sbrfNamespaceMap">
        <beans:entry key="env" value="http://schemas.xmlsoap.org/soap/envelope/"/>
        <beans:entry key="ns1" value="http://sbrf.ru/prpc/mq/headers"/>
    </util:map>

    <!-- Каналы-->
